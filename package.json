{
  "name": "block-explorer",
  "version": "1.0.0",
  "description": "",
   "main": "cli.js",
  "bin": "cli.js",

   "scripts": {
    "build:win": "pkg cli.js --target node18-win-x64 --output bin/block-explorer.exe",
    "build:mac": "pkg cli.js --target node18-macos-x64 --output bin/block-explorer-macos",
    "build:linux": "pkg cli.js --target node18-linux-x64 --output bin/block-explorer-linux",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux"
  },
   "pkg": {
    "assets": [
      "node_modules/figlet/fonts/**/*"
    ]
  },
   "keywords": ["blockchain", "cli", "explorer", "private", "permissioned"],
